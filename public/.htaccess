# Habilitar rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Si el archivo o directorio existe, servirlo directamente
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Si no existe, redirigir todo al index.html (para SPA)
    RewriteRule ^ index.html [QSA,L]
</IfModule>

# Configuraci칩n de tipos MIME
<IfModule mod_mime.c>
    AddType application/javascript js
    AddType text/css css
</IfModule>

# Compresi칩n GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache para assets est치ticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Seguridad - Prevenir listado de directorios
Options -Indexes

# P치ginas de error personalizadas (opcional)
ErrorDocument 404 /index.html
